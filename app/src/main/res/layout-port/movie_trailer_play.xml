<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/movie_play_item"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_image_play"
        android:layout_below="@+id/movie_title_play"
        android:layout_width="@dimen/image_list_weight_land"
        android:layout_height="@dimen/image_list_height_land"
        android:layout_marginRight="@dimen/right_margin_image"
        android:layout_marginLeft="@dimen/right_margin"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/movie_title_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_margin_bottom"
        android:layout_marginTop="@dimen/title_margin_top"
        android:text="TextView"
        android:layout_marginRight="@dimen/right_margin"
        android:layout_marginLeft="@dimen/right_margin"
        android:textSize="@dimen/title_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:id="@+id/movie_ratingBar_play"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/movie_image_play"
        android:layout_alignRight="@+id/movie_image_play"
        android:layout_alignEnd="@+id/movie_image_play" />

    <TextView
        android:id="@+id/movie_genre_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textSize="@dimen/genre_text"
        android:layout_marginRight="@dimen/right_margin"
        android:layout_below="@+id/movie_title_play"
        android:layout_toRightOf="@+id/movie_image_play"
        android:layout_toEndOf="@+id/movie_image_play" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/right_margin"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/movie_image_play"
        />

    <ImageButton
        android:id="@+id/imageButtonTrailerPlay"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_youtube_port"
        android:layout_marginRight="@dimen/image_button_margin_port"
        android:layout_marginEnd="@dimen/image_button_margin_port"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/movie_ratingBar_play"
        android:layout_toStartOf="@+id/movie_ratingBar_play" />

</RelativeLayout>