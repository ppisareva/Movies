<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_image_play"
            android:layout_width="@dimen/image_list_weight_land_play"
            android:layout_height="@dimen/image_list_height_land_play"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/image_margin"
            android:layout_marginLeft="@dimen/image_margin"
            android:layout_marginTop="@dimen/image_margin" />

        <TextView
            android:id="@+id/movie_title_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/movie_image_play"
            android:layout_marginLeft="@dimen/right_margin"
            android:layout_marginRight="@dimen/right_margin"
            android:layout_toRightOf="@+id/movie_image_play"
            android:text="TextView"
            android:textSize="@dimen/title_text_land" />

        <RatingBar
            android:id="@+id/movie_ratingBar_play"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_title_play"
            android:layout_below="@+id/movie_title_play"
            android:layout_marginTop="@dimen/rating_bar_margin"
            android:layout_toRightOf="@+id/movie_image_play" />

        <TextView
            android:id="@+id/movie_genre_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_title_play"
            android:layout_below="@+id/movie_ratingBar_play"
            android:layout_marginTop="@dimen/genre_margin"
            android:layout_toEndOf="@+id/movie_image_play"
            android:layout_toRightOf="@+id/movie_image_play"
            android:text="Action"
            android:textSize="@dimen/genre_text_land" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/movie_image_play"
            android:background="@android:color/darker_gray" />

</RelativeLayout>